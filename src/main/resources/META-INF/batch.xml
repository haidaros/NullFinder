	</bean>
	<bean id="nullCheckWriter" class="ch.unibe.scg.nullfinder.batch.NullCheckWriter">
	</bean>
	<bean id="javaSourceProcessor" class="ch.unibe.scg.nullfinder.batch.JavaSourceProcessor">
	</bean> -->
</beans>